{
  "name": "cheloni",
  "version": "0.2.0",
  "description": "A type-safe, schema-based framework for building CLI with full TypeScript inference",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "module": "./dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/core/index.d.ts",
      "import": "./dist/core/index.js"
    },
    "./plugins": {
      "types": "./dist/plugins/index.d.ts",
      "import": "./dist/plugins/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "vite build",
    "prepublishOnly": "bun run build",
    "typecheck": "bunx tsc --noEmit",
    "release": "release-it",
    "release:dry": "release-it --dry-run",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui"
  },
  "keywords": [
    "cli",
    "typescript",
    "zod",
    "schema",
    "command-line",
    "type-safe"
  ],
  "author": "Luis Emidio",
  "license": "MIT",
  "homepage": "https://github.com/9aia/cheloni#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/9aia/cheloni.git"
  },
  "bugs": {
    "url": "https://github.com/9aia/cheloni/issues"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "release-it": "^19.2.4",
    "vite": "^7.3.1",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^4.0.18"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "mri": "^1.2.0",
    "zod": "^4.3.6"
  }
}
